# Enable rewrite engine
RewriteEngine On

# Redirect to remove .html extension from URLs
# This makes URLs like /about.html redirect to /about
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/(.+\.html) [NC]
RewriteRule ^ %1 [R=301,L]

# Internally rewrite clean URLs to actual .html files
# This makes /about internally serve /about.html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Handle the root index file
RewriteRule ^index$ index.html [NC,L]

# Prevent direct access to .html files (optional security measure)
# RewriteCond %{THE_REQUEST} \.html
# RewriteRule ^ - [F]